<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFarm"
    android:background="@drawable/bg11">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scrollbars="vertical">


    <LinearLayout
        android:id="@+id/layoutSeat"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/editTextCattleBreed"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"

        android:gravity="center"
        android:hint="Cattle Breed"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

    <EditText
        android:id="@+id/editTextCattleTagId"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/editTextCattleBreed"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="Cattle Tag ID"
        android:inputType="textNoSuggestions"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

    <EditText
        android:id="@+id/editTextCattleDOB"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/editTextCattleTagId"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="CattleDOB"
        android:inputType="date"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

    <EditText
        android:id="@+id/editTextCattleSpeacialFeature"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/editTextCattleDOB"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="Cattle Speacial Feature"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

    <EditText
        android:id="@+id/editTextCattleSex"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/editTextCattleSpeacialFeature"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="Cattle Sex"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

    <EditText
        android:id="@+id/editTextCattleNoOfLactation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/editTextCattleSex"
        android:layout_marginTop="9dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="No Of Lactation"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1" />

        <EditText
            android:id="@+id/editTextFarmBirthWeight"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:gravity="center"
            android:hint="Birth Weight"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimaryDark1"
            android:textColorHint="@color/colorPrimaryDark1" />

        <EditText
        android:id="@+id/editTextCattleBreedingWeight"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Breeding Weight"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextCattleWeaningWeight"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Cattle Weaning Weight"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextCattleAveragePreWeaningGrowthRate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Average Pre Weaning Growth Rate"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextCattleAveragePostWeaningGrowthRate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Average Post Weaning Growth Rate"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextCattleLastCalvingDate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Last Calving Date"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnAddCattle"
        android:layout_width="143dp"
        android:layout_height="74dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="648dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/add"
        android:gravity="center"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
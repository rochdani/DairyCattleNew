<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFarm"
    android:background="@drawable/bg11">



    <EditText
        android:id="@+id/editTextFarmName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Farm Name" />

    <EditText
        android:id="@+id/editTextFarmRegNo"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:hint="Registration No" />

    <EditText
        android:id="@+id/editTextFarmOwnName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Owner Name" />

    <EditText
        android:id="@+id/editTextFarmVetDiv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:hint="Veterinary Division" />

    <EditText
        android:id="@+id/editTextFarmGSDiv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:hint="GS Division" />

    <EditText
        android:id="@+id/editTextFarmAddress"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Address" />

    <EditText
        android:id="@+id/editTextFarmContactNo"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Contact No" />

    <EditText
        android:id="@+id/editTextFarmCattleCount"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Cattle Count" />

    <EditText
        android:id="@+id/editTextFarmDairyCattleCount"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorPrimaryDark1"
        android:textColorHint="@color/colorPrimaryDark1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Dairy Cattle Count" />

    <Button
        android:id="@+id/btnAddCattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="607dp"
        android:layout_marginEnd="122dp"
        android:layout_marginRight="122dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/add"
        android:gravity="center"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>
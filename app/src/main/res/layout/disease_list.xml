<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sndroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/textViewDiseaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />


    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseClinicalSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseTypeOfCS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseTreatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />

    <TextView
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewDiseaseNameofVet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:gravity="center"
        />


</LinearLayout>